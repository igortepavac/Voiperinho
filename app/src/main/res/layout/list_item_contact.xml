<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@android:color/white"
    android:paddingLeft="@dimen/spacing_small">

    <ImageView
        android:id="@+id/contact_avatar"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@drawable/contact_avatar" />

    <TextView
        android:id="@+id/contact_username"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_toEndOf="@id/contact_avatar"
        android:layout_toRightOf="@id/contact_avatar"
        android:layout_centerVertical="true"
        android:layout_marginLeft="@dimen/spacing_small"
        android:layout_marginStart="@dimen/spacing_small"
        tools:text="Username"
        android:textSize="@dimen/text_size_standard_large"
        android:textStyle="bold"
        style="@style/Input"/>

    <ImageView
        android:id="@+id/contact_available"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginRight="@dimen/spacing_default"
        android:layout_centerVertical="true"
        android:src="@drawable/online_icon"
        android:layout_alignParentRight="true"/>

</RelativeLayout>