<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/color_primary</item>
        <item name="colorPrimaryDark">@color/color_primary_dark</item>
        <item name="colorAccent">@color/color_accent</item>
        <item name="android:windowContentOverlay">@null</item>
    </style>

    <!-- Toolbar -->
    <style name="AppTheme.ToolbarStyle">
        <item name="elevation">4dp</item>
        <item name="titleTextColor">@android:color/white</item>
        <item name="android:background">@color/color_primary</item>
    </style>

    <style name="AppTheme.ToolbarTheme">
        <item name="colorControlNormal">@android:color/white</item>
    </style>

    <!-- Login and registration -->
    <style name="Logo">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_marginTop">@dimen/spacing_large</item>
        <item name="android:gravity">center_horizontal</item>
    </style>

    <style name="FormLayout">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:orientation">vertical</item>
        <item name="android:padding">@dimen/spacing_default</item>
    </style>

    <style name="TextInputLayout">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_marginTop">@dimen/spacing_small</item>
    </style>

    <style name="Input">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:maxLines">1</item>
        <item name="android:singleLine">true</item>
    </style>

    <style name="Input.Username">
        <item name="android:inputType">text</item>
    </style>

    <style name="Input.Email">
        <item name="android:inputType">textEmailAddress</item>
    </style>

    <style name="Input.Password">
        <item name="android:fontFamily">sans-serif</item>
        <item name="android:inputType">textPassword</item>
    </style>

    <style name="Button">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_marginTop">@dimen/spacing_default</item>
        <item name="android:textSize">@dimen/text_size_standard</item>
        <item name="android:textStyle">bold</item>
    </style>

    <style name="Button.Action">
        <item name="android:textColor">@android:color/white</item>
        <item name="android:background">@drawable/login_button_bg</item>
    </style>

    <style name="Button.SubAction">
        <item name="android:layout_marginBottom">@dimen/spacing_large</item>
        <item name="android:textColor">@color/login_button_normal</item>
        <item name="android:background">@drawable/register_button_bg</item>
    </style>

    <!-- Main activity - Contacts and Requests -->
    <style name="ListPlaceholder">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_centerInParent">true</item>
        <item name="android:visibility">gone</item>
    </style>

    <style name="ContactListItem">
        <item name="android:background">@android:color/white</item>
        <item name="android:paddingLeft">@dimen/spacing_small</item>
    </style>

    <style name="ContactUsername" parent="Input">
        <item name="android:textSize">@dimen/text_size_standard_large</item>
        <item name="android:textStyle">bold</item>
    </style>

    <style name="ChatUsername" parent="Input">
        <item name="android:textColor">@android:color/black</item>
        <item name="android:textSize">@dimen/text_size_standard</item>
        <item name="android:textStyle">bold</item>
    </style>

    <style name="Separator">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">1dp</item>
        <item name="android:background">@color/color_primary_dark</item>
    </style>
</resources>
